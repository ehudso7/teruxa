{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run start:production",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "backend",
      "source": {
        "repo": "https://github.com/ehudso7/teruxa",
        "branch": "main"
      },
      "build": {
        "buildCommand": "cd packages/backend && npm run build",
        "watchPatterns": ["packages/backend/**"]
      },
      "deploy": {
        "startCommand": "cd packages/backend && npm run start",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 30
      }
    },
    {
      "name": "frontend",
      "source": {
        "repo": "https://github.com/ehudso7/teruxa",
        "branch": "main"
      },
      "build": {
        "buildCommand": "cd packages/frontend && npm run build",
        "watchPatterns": ["packages/frontend/**"]
      },
      "deploy": {
        "startCommand": "cd packages/frontend && npm run preview",
        "healthcheckPath": "/",
        "healthcheckTimeout": 30
      }
    }
  ]
}